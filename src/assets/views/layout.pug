//- Service
include ./includes.pug

mixin incStyle(href)
    link(rel="stylesheet", href= href)

mixin incScript(src)
    script(src= src)

block config

//- Main
doctype html
head

    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <link rel="icon" href="./assets/img/favicon.ico" type="image/x-icon"/>
    
    block styleVendor

    +incStyle('./assets/css/main.css')

    block styleInline

body

    +page()

        +header()

            if headerDesk
                +headerDesk()
                    block headerDesk
            
            if headerDesk
                +headerMob()
                    block headerMob

        +main()

            if !sidebarLeft && !sidebarRight            
                +content({sidebar: 0})
                    block content

            if sidebarLeft && !sidebarRight
                +sidebar()
                    block sidebarLeft

                +content({sidebar: 1})
                    block content

            if !sidebarLeft && sidebarRight
                +content({sidebar: 1})
                    block content

                +sidebar()
                    block sidebarRight

            if sidebarLeft && sidebarRight
                +sidebar()
                    block sidebarLeft

                +content({sidebar: 2})
                    block content
                    
                +sidebar()
                    block sidebarRight

        +footer()

            if footerDesk
                +footerDesk()
                    block footerDesk

            if footerMob 
                +footerMob()
                    block footerMob

    block scriptVendor

    +incScript('./assets/js/main.js')

    block scriptInit
